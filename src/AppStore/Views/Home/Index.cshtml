@model AppStore.Models.DTO.LibroListVm;
@{
    Layout = "_Layout";
}



<section class="search-bar">
          <form >
          <input type="text" placeholder="buscar libro">
          <button type="submit"><i class="fa fa-search"></i></button>
         </form>
        </section>


        <section class="movies">
    @if (Model == null || Model.LibroList == null || !Model.LibroList.Any())
    {
        <p>No hay libros disponibles.</p> // Mensaje si no hay libros
    }
    else
    {
        foreach (var libro in Model.LibroList)
        {
            <div class="movie-card" onclick="window.location.href='/movie-detail.html'">
                <div class="movie-image">
                    <img src="/Uploads/@libro.Imagen" width="200" height="300">
                </div>
                <div class="movie-info">
                    <h4>@libro.Titulo</h4>
                    <h4>@libro.CategoriasNames</h4>
                    <h4>@libro.CreateDate</h4>
                </div>
            </div>
        }
    }
</section>


